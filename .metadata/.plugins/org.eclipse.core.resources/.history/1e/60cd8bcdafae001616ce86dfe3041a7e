package lineAnimate
import processing.core._

object AnimationTest extends RulesIR { 
  def main(args: Array[String]) {
    PApplet.main(Array[String]("AnimationTest"))
  }
  
  var pos: Position = Position(50,50)
  val rules: List[RulesIR] = List(
        Right(10),
        Down(10),
        Left(10),
        Up(10)
  )
  
  var startRules: Array[Start] = startRules(rules)
  //posRules(rules)
}

class AnimationTest extends PApplet {
  override def settings () {
    size(500, 500)
  }

  override def setup() {
    stroke(255)
    background(0)
    frameRate(300)
  }
    
  override def draw { 
    runAnimation(AnimationTest.rules, AnimationTest.posRules(rules), 
  }
}
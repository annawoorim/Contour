package lineAnimate
import processing.core._

object AnimationTest extends RulesIR { 
  def main(args: Array[String]) {
    PApplet.main(Array[String]("lineAnimate.AnimationTest"))
  }  
}

class AnimationTest extends PApplet {
  var pos: Position = Position(200,200)
  val rules: List[RulesIR] = List(
        Right(100),
        Down(100),
        Left(100),
        Up(80),
        Right(80),
        Down(60),
        Left(60),
        Up(40),
        Right(40),
        Down(20),
        Left(20)
  )
  
  var posMoved = AnimationTest.posRules(rules)
  var startRule = AnimationTest.startRules(rules)
    
  override def settings () {
    size(500, 500)
  }

  override def setup() {
    stroke(255)
    background(0)
    frameRate(300)
  }
    
  override def draw { 
    AnimationTest.runAnimation(rules, posMoved, startRule, pos)
    point(pos.currX, pos.currY)
  }
}